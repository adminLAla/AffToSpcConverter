<Window x:Class="AffToSpcConverter.Views.PackageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Package Assets" Height="400" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Source File -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Source File:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SourceFilePath}" Margin="0,0,10,10"/>
        <Button Grid.Row="0" Grid.Column="2" Content="..." Width="30" Margin="0,0,0,10" Click="BtnBrowseSource_Click"/>

        <!-- Mapping JSON -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Mapping JSON:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding MappingJsonPath}" Margin="0,0,10,10"/>
        <Button Grid.Row="1" Grid.Column="2" Content="..." Width="30" Margin="0,0,0,10" Click="BtnBrowseMapping_Click"/>

        <!-- Output Directory -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Output Dir:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding OutputDirectory}" Margin="0,0,10,10"/>
        <Button Grid.Row="2" Grid.Column="2" Content="..." Width="30" Margin="0,0,0,10" Click="BtnBrowseOutput_Click"/>

        <!-- Original Filename -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Original Filename:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding OriginalFilename}" Margin="0,0,0,10" ToolTip="e.g. bgm/MainTitle.ogg"/>

        <!-- Status -->
        <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding Status}" Foreground="Gray" TextWrapping="Wrap" Margin="0,10,0,10"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Package" Width="100" Margin="0,0,10,0" Click="BtnPackage_Click"/>
            <Button Content="Close" Width="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
