<Window x:Class="AffToSpcConverter.Views.PackageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="打包资源" Height="400" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Source -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="源文件：" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SourceFilePath}" Margin="0,0,10,10"/>
        <Button Grid.Row="0" Grid.Column="2" Content="..." Width="30" Margin="0,0,0,10" Click="BtnBrowseSource_Click"/>

        <!-- Output -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="输出目录：" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding OutputDirectory}" Margin="0,0,10,10"/>
        <Button Grid.Row="1" Grid.Column="2" Content="..." Width="30" Margin="0,0,0,10" Click="BtnBrowseOutput_Click"/>

        <!-- Original filename -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="原始文件名：" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding OriginalFilename}" Margin="0,0,0,10"
                 ToolTip="例如：bgm/MainTitle.ogg"/>

        <!-- Status -->
        <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding Status}" Foreground="Gray"
                   TextWrapping="Wrap" Margin="0,10,0,10"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="打包" Width="100" Margin="0,0,10,0" Click="BtnPackage_Click"/>
            <Button Content="关闭" Width="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
